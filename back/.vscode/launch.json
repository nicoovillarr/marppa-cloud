{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Nest Framework",
      "type": "node",
      "env": {
        "NODE_ENV": "${input:env}"
      },
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start:debug"
      ],
      "autoAttachChildProcesses": true,
      "sourceMaps": true,
      "stopOnEntry": false,
      "console": "integratedTerminal"
    },
    {
      "name": "Jest: debug current test file",
      "type": "node",
      "env": {
        "NODE_ENV": "${input:env}"
      },
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": [
        "${relativeFile}",
        "--runInBand"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ],
  "inputs": [
    {
      "id": "env",
      "type": "pickString",
      "description": "Select the environment:",
      "options": [
        {
          "label": "dev",
          "value": "development"
        },
        {
          "label": "prod",
          "value": "production"
        }
      ]
    }
  ]
}